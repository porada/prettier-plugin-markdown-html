{
	"name": "prettier-plugin-markdown-html",
	"version": "1.2.0",
	"description": "Format raw HTML in Markdown with Prettier",
	"license": "MIT",
	"author": {
		"name": "Dom Porada",
		"email": "dom@dom.engineering",
		"url": "https://dom.engineering"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/porada/prettier-plugin-markdown-html.git"
	},
	"keywords": [
		"formatting",
		"gfm",
		"github",
		"github-flavored-markdown",
		"html",
		"markdown",
		"markdown-html",
		"md",
		"prettier",
		"prettier-plugin"
	],
	"files": [
		"dist/**"
	],
	"type": "module",
	"sideEffects": false,
	"exports": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.29.2",
	"peerDependencies": {
		"prettier": ">=3"
	},
	"devDependencies": {
		"@standard-config/eslint": "^1.4.1",
		"@standard-config/oxlint": "^1.1.7",
		"@standard-config/prettier": "^1.9.1",
		"@standard-config/tsconfig": "^2.0.2",
		"@vitest/coverage-v8": "^4.0.18",
		"eslint": "^10.0.1",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"oxlint": "^1.47.0",
		"oxlint-tsgolint": "^0.14.2",
		"prettier": "^3.8.1",
		"publint": "^0.3.17",
		"tsdown": "^0.20.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"scripts": {
		"build": "tsdown",
		"fix": "pnpm format && pnpm lint",
		"format": "prettier --write --ignore-unknown .",
		"format:check": "prettier --check --ignore-unknown .",
		"lint": "oxlint --fix --type-aware --type-check --deny-warnings --report-unused-disable-directives && eslint . --fix",
		"lint:check": "oxlint --type-aware --type-check --deny-warnings --report-unused-disable-directives && eslint .",
		"prepack": "pnpm run '/^(format:check|lint:check|test|typecheck)$/' && pnpm build",
		"prepare": "husky",
		"test": "vitest run",
		"typecheck": "tsc --noEmit"
	}
}
